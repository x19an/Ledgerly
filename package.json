
{
  "name": "ledgerly",
  "version": "1.0.2",
  "description": "Account reselling tracker with SQLite persistence",
  "main": "dist-electron/electron-main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/x19an/Ledgerly"
  },
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "ts-node server/index.ts",
    "client": "vite",
    "build:electron": "tsc --project tsconfig.electron.json",
    "build": "vite build && npm run build:electron",
    "electron:dev": "concurrently -k \"npm run client\" \"tsc --project tsconfig.electron.json --watch\" \"wait-on http://localhost:5173 dist-electron/electron-main.js && electron .\"",
    "prebuild:electron": "taskkill /f /im Ledgerly.exe /t >nul 2>&1 || exit /b 0",
    "electron:build": "npm run prebuild:electron && npm run build && electron-builder",
    "dist": "npm run electron:build"
  },
  "build": {
    "appId": "com.ledgerly.app",
    "productName": "Ledgerly",
    "directories": {
      "output": "release"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "x19an",
        "repo": "ledgerly"
      }
    ],
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "portable",
      "icon": "public/icon.ico"
    },
    "mac": {
      "icon": "public/icon.icns",
      "category": "public.app-category.finance"
    },
    "linux": {
      "icon": "public/icon.png",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "framer-motion": "^11.0.8",
    "lucide-react": "^0.473.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "wait-on": "^8.0.1"
  }
}
